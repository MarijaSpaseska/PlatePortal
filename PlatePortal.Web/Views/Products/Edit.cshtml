@model PlatePortal.Domain.DomainModels.Product

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h1>Edit Product</h1>
</div>
    <hr />
    <div class="container">
        <div class="row  justify-content-center">
            <div class="col-12">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <label asp-for="MenuItemName" class="control-label"></label>
                                <input asp-for="MenuItemName" class="form-control" />
                                <span asp-validation-for="MenuItemName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="MenuItemType" class="control-label"></label>
                                <input asp-for="MenuItemType" class="form-control" />
                                <span asp-validation-for="MenuItemType" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="MenuItemDescription" class="control-label"></label>
                                <input asp-for="MenuItemDescription" class="form-control" />
                                <span asp-validation-for="MenuItemDescription" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="MenuItemPrice" class="control-label"></label>
                                <input asp-for="MenuItemPrice" class="form-control" />
                                <span asp-validation-for="MenuItemPrice" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="MenuItemImage" class="control-label"></label>
                                <input asp-for="MenuItemImage" class="form-control" />
                                <span asp-validation-for="MenuItemImage" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label asp-for="RestaurantName" class="control-label"></label>
                                <input asp-for="RestaurantName" class="form-control" />
                                <span asp-validation-for="RestaurantName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="RestaurantAddress" class="control-label"></label>
                                <input asp-for="RestaurantAddress" class="form-control" />
                                <span asp-validation-for="RestaurantAddress" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="RestaurantOpeningHours" class="control-label"></label>
                                <input asp-for="RestaurantOpeningHours" class="form-control" />
                                <span asp-validation-for="RestaurantOpeningHours" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="RestaurantDeliveryTime" class="control-label"></label>
                                <input asp-for="RestaurantDeliveryTime" class="form-control" />
                                <span asp-validation-for="RestaurantDeliveryTime" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="RestaurantCuisine" class="control-label"></label>
                                <input asp-for="RestaurantCuisine" class="form-control" />
                                <span asp-validation-for="RestaurantCuisine" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="RestaurantLogo" class="control-label"></label>
                                <input asp-for="RestaurantLogo" class="form-control" />
                                <span asp-validation-for="RestaurantLogo" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                            <div class="form-group text-center">
                                <input type="submit" value="Save" class="btn btn-success" />
                            </div>
                </form>
                <div class="text-center">
                    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                </div>
            </div>
        </div>

    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

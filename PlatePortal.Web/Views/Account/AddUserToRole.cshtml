@model PlatePortal.Domain.ViewModel.AddToRoleModel

    <div class="text-center">
        <h1>Add User to Role</h1>
        <hr />
    </div>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 m-auto">
                <form asp-action="AddUserToRole" asp-controller="Account" method="post">
                        <div class="form-group">
                            <label asp-for="@Model.Email" class="control-label"></label>
                            <br>
                            <div >
                                <br>
                                @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                                <br>
                                @Html.ValidationMessageFor(m => m.Email)
                            </div>
                        </div>

                        <div class="form-group">
                            <div >
                                <p>Choose a role</p>
                                @Html.DropDownListFor(z => z.SelectedRole, new SelectList(Model.Roles), new { @class = "form-control" })
                            </div>
                        </div>


                        <div class="form-group text-center">
                            <div class="btn btn-success">
                                <button type="submit">Save</button>
                                <br>

                            </div>
                        </div>

                </form>
            </div>
        </div>

    </div>
@model PlatePortal.Domain.Identity.UserLoginDto
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h1>Login</h1>
    <hr />
</div>

<div class="container">
    
    <div class="row justify-content-center">
        <div class="col-md-6 m-auto">
            @Html.ValidationSummary()
            <form asp-action="Login" asp-controller="Account" method="post">

                <div class="form-group">
                    <label asp-for="@Model.Email" class="control-label"></label>
                    <br>
                    <div>
                        @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email)
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.Password" class="control-label"></label>
                    <br>
                    <div>
                        @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                </div>

                <div class="form-group text-center">
                    <div class="col-sm-12 btn-submit">
                        <button type="submit" class="btn btn-success">Login</button>
                        <a asp-action="Register" asp-controller="account" class="btn btn-outline-secondary">Don't have an account? Click to Register</a>

                    </div>
                </div>


            </form>
        </div>
    </div>
</div>
@model PlatePortal.Domain.Identity.UserRegistrationDto
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="text-center">
    <h1>Register</h1>
    <hr />
</div>

<div class="container">
    <div class="row  justify-content-center">
        <div class="col-md-6 m-auto">
            @Html.ValidationSummary()
            <form asp-action="Register" asp-controller="Account" method="post">

                
                    <div class="form-group">
                        <label asp-for="@Model.Email" class="control-label"></label>
                        <br>
                        <div >
                            @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Email)
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Name" class="control-label"></label>
                        <br>
                        <div>
                            @Html.TextBoxFor(m => m.Name, new { placeholder = "Name", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Name)
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.LastName" class="control-label"></label>
                        <br>
                        <div >
                            @Html.TextBoxFor(m => m.LastName, new { placeholder = "Last Name", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.LastName)
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.PhoneNumber" class="control-label"></label>
                        <br>
                        <div>
                            @Html.TextBoxFor(m => m.PhoneNumber, new { placeholder = "PhoneNumber", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.PhoneNumber)
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.Address" class="control-label"></label>
                        <br>
                        <div>
                            @Html.TextBoxFor(m => m.Address, new { placeholder = "Address", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Address)
                        </div>
                    </div>


                    <div class="form-group">
                        <label asp-for="@Model.Password" class="control-label"></label>
                        <br>
                        <div>
                            @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password)
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.ConfirmPassword" class="control-label"></label>
                        <br>
                        <div >
                            @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword)
                        </div>
                    </div>

                    <div class="form-group text-center">
                        <div class="col-sm-12 btn-submit">
                            <button type="submit" class="btn btn-success">Sign Up</button>

                        </div>
                    </div>
            </form>
        </div>
    </div>
</div>


@model List<PlatePortal.Domain.DomainModels.Order>

@{
    ViewData["Title"] = "Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h1>All Orders</h1>
    <hr />
    <a class="btn btn-success" asp-controller="Order" asp-action="ExportAllOrders">Export All Orders</a>
</div>
    <div class="container my-4">


        <table class="table table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th>Customer Email</th>
                    <th>Customer Address</th>
                    <th>Number of Products</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    var item = Model[i];

                    <tr>
                        <th scope="row">@(i+1)</th>
                        <td>@item.User.Email</td>
                        <td>@item.User.Address</td>
                        <td>@item.ProductInOrders.Count</td>
                        <td>
                            <a class="btn btn-outline-secondary" asp-controller="Order" asp-action="Details" asp-route-id="@item.Id">View Order</a>
                            <a class="btn btn-success" asp-controller="Order" asp-action="CreateInvoice" asp-route-id="@item.Id">Create Invoice</a>

                        </td>
                    </tr>
                }


            </tbody>

        </table>

    </div>
